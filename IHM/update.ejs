  <body class="text-center">
    
<main class="form-signin">
  <% for( let i = 0; i < resultat.length; i++ ) { %>
  <form action="/modifier" method="post">
    <img class="mb-4" src="/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Modifier un article</h1>

  

    <input type="hidden" name="id" id="id" value="<%= resultat[i].id_article %>">
    <div class="form-floating">
      <input type="text" class="form-control" id="titre" name="titre" value="<%= resultat[i].titre %>"  placeholder="name@example.com">
      <label for="floatingInput">Titre </label>
    </div>
    <div class="form-floating">
      <label for="exampleFormControlTextarea1"></label>
      <textarea class="form-control" id="description" name="description" placeholder="Description" rows="2" ><%= resultat[i].description %></textarea>
    </div>


  
    <button class="w-100 btn btn-lg btn-primary" type="submit" >Modifier</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
  </form>

  <% } %>
</main>


    
